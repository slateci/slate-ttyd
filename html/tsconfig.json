{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}
